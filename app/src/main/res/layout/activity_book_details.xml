<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_900"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Book Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_book_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBookImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/book_image"
            android:importantForAccessibility="no" />
    </androidx.cardview.widget.CardView>

    <!-- Book Details -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_book_image"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Book Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/borrowedBooks"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold" />

            <!-- Book Author -->
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium" />

            <!-- Genre -->
            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- Published Year -->
            <TextView
                android:id="@+id/tvPublishedYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- ISBN -->
            <TextView
                android:id="@+id/tvISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- PageNumber -->
            <TextView
                android:id="@+id/tvPageNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- Borrowed By -->
            <TextView
                android:id="@+id/tvBorrowedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>

            <!-- Book Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_black"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Button: Favorites -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_add_book_ripple_effect"
            android:backgroundTint="@color/totalBooks"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_favorite"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/favorite"
                />
        </FrameLayout>

        <!-- Button: Edit -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_add_book_ripple_effect"
            android:backgroundTint="@color/green_700"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                />
        </FrameLayout>

        <!-- Button: Delete -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_add_book_ripple_effect"
            android:backgroundTint="@color/btn_delete"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
